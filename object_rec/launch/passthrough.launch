<launch>
  <node pkg="nodelet" type="nodelet" name="pcl_manager" args="manager" output="screen" />

  <!-- Run a passthrough filter to clean NaNs -->
  <node pkg="nodelet" type="nodelet" name="passthrough_z" args="load pcl/PassThrough pcl_manager" output="screen">
    <remap from="~input" to="/camera/depth_registered/points" />
    <remap from="~output" to="/passthrough/output_z" />
    <rosparam subst_value="true">
      filter_field_name: z
      filter_limit_min: 0
      filter_limit_max: 2.63
      filter_limit_negative: False
      keep_organized : True
    </rosparam>
  </node>

  <node pkg="nodelet" type="nodelet" name="passthrough_y" args="load pcl/PassThrough pcl_manager" output="screen">
    <remap from="~input" to="/passthrough/output_z" />
    <remap from="~output" to="/passthrough/output_y" />
    <rosparam subst_value="true">
      filter_field_name: y
      filter_limit_min: -1
      filter_limit_max: -0.2
      filter_limit_negative: False
      keep_organized : True
    </rosparam>
  </node>

  <node name="set_nan_to_white"
        pkg="pcl_ros" type="set_nan_to_white">
    <remap from="input" to="/passthrough/output_y" />
    <remap from="output" to="/passthrough/output_white"/>
</node>

<node name="convert_pointcloud_to_image"
        pkg="pcl_ros" type="convert_pointcloud_to_image">
    <remap from="input" to="/passthrough/output_white" />
    <remap from="output" to="/passthrough/image"/>
</node>

</launch>